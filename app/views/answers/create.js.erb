<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |msg| %>
    $('.answer-errors').html('<%= j msg %>');
  <% end %>
<% else %>
  $('.answers').html('<%= j render 'questions/answers' %>');
  $('.new_answer #answer_body').val('');

  <% publish_to "/questions/#{@question.id}/answers" do %>
    $('.answers').html('<%= j render 'questions/answers' %>');
  <% end %>
<% end %>
